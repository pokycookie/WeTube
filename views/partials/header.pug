header.header
    .header-column
        a(href=routes.home)
            i.fab.fa-youtube
    .header-column
        form(action=routes.search, method="get")
            input(type="text", name="q")
    .header-column
        ul
            if user.isAuthenticated
                li
                    a(href=`${routes.videos}${routes.upload}`) Upload
                li
                    a(href=`${routes.users}${routes.userDetail(user.id)}`) Profile
                li
                    a(href=routes.logout) Log Out
            else
                li
                    a(href=routes.join) Join
                li
                    a(href=routes.login) Log in
